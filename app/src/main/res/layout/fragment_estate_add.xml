<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/offset_16">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_250"
        android:contentDescription="@string/desc_image"
        android:src="@drawable/ic_baseline_image_24" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_16"
        android:hint="@string/shared_price"
        android:inputType="number"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_16"
        android:hint="@string/shared_address"
        android:inputType="textMultiLine"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_marginTop="@dimen/offset_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shared_add" />

</LinearLayout>